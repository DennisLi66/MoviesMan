<%- include('partials/navbar') %>
<div class="errorMessage" <%= errHidden %>><%= errorMsg %></div>
<form action="/register" method="POST">
    <label for="email">Email</label><br>
    <input type="email" name="email" required><br>
    <label for="username">Username</label><br>
    <input type="text" name="username" required><br>
    <label for="password">Password (Must be 8 characters or more and consist of numbers, letters, or symbols)</label><br>
    <input type="password" name="password" pattern="[a-zA-z0-9-!$%^&*()_+|~=`{}\[\]:;<>?,.\/]{8,}" required><br>
    <label for="password">Confirm Password</label><br>
    <input type="password" name="cPassword" pattern="[a-zA-z0-9-!$%^&*()_+|~=`{}\[\]:;<>?,.\/]{8,}" required><br>
  <button type="submit" class="btn btn-dark">Register</button>
</form>

