<%- include('partials/header') %>
<!-- Should probably show recent / recent popular movies -->
<%- include('partials/navbar') %>
<h1 style="text-align:center"><%= profuser %>'s page</h1>
<h3 style="text-align:center"><%= profuser %>'s Likes</h3>
<% if (likes.length == 0){ %>
<div style="text-align:center">This user has not liked any movies.</div>
<%} else {%>
<div class="row" style="width:100%">
  <%for (let u = 0; u < likes.length; u++){ %>
  <div class="col-lg-3 col-md-6 col-sml-12">
    <div class="card" style="height: 425px">
      <div class="card-header">
        <a href=<%=  process.env.HTTPSURL + "/movie/" + likes[u].imdbID %>> <%= likes[u].title %> </a>
      </div>
      <div class="card-body">
        <a href=<%=  process.env.HTTPSURL + "/movie/" + likes[u].imdbID %>> <img class="rbImg" src=<%= likes[u].poster %> onerror="this.src='/images/altImage.png'"> </a>
      </div>
      <div class="card-footer" <%= notOwnerHidden %>>
        <a href=<%=  process.env.HTTPSURL + "/profile/" + profID + "/delete/" + likes[u].imdbID %> <%= notOwnerHidden %>> Unlike</a>
      </div>
    </div>
  </div>
  <%  } %>
</div>
<%} %>
<br>
<h3 style="text-align:center"><%= profuser %>'s Ratings</h3>
<% if (rates.length == 0){ %>
<div style="text-align:center">This user has not rated any movies.</div>
<%} else {%>
<div class="row" style="width:100%">
  <% for(let f = 0; f < rates.length; f++){%>
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <a href=<%=  process.env.HTTPSURL + "/movie/" + rates[f].imdbID %>> <%= rates[f].title %> </a>
      </div>
      <div class="card-body">
        <a href=<%=  process.env.HTTPSURL + "/movie/" + rates[f].imdbID %>> <img class="rbImg" src=<%= rates[f].poster %> onerror="this.src='/images/altImage.png'"> </a>
      </div>
      <div class="card-footer">
        <%= rates[f].textbox %>
        <br><br>
        <a href=<%=  process.env.HTTPSURL + "/profile/" + profID + "/deleter/" + rates[f].imdbID %> <%= notOwnerHidden %>> Delete Rating</a>
      </div>
    </div>
    <% } %>
  </div>
  <%} %>
  <%- include('partials/footer') %>
