<%- include('partials/header') %>
<!-- Should probably show recent / recent popular movies -->
<%- include('partials/navbar') %>

<h1> <%= movieTitle%> </h1>
<img class="moviePoster" src=<%= moviePoster%> onerror="this.src='/images/altImage.png'" alt="Movie Poster For <%= movieTitle%>">
<br>
Release Year: <%= movieYear %>
<br>
Rating: <%= movieRating %>
<br>
Description: <%= moviePlot %>
<br>

<div <%= imdbHidden %>>
<a href=<%= imdbLink %>>IMDB</a> Rating: <%= imdbRating %>
<br>
</div>

<div <%= metaHidden %>>
<a href=<%= metaLink %>>MetaCritic</a> Rating: <%= metaRating %>
<br>
</div>

<div <%= rotHidden %>>
<a href=<%= rotLink %>>Rotten Tomatoes</a> Rating: <%= rotRating %>
</div>

<!-- Like Button Redirect Here-->
<br>
<form method="POST" action=<%= "/movie/" + mId %> >
  <div> Number of People who have Liked this movie: <%= likeCount %>. </div>
  <input type="hidden" id="liked" name="liked" value="<%= likeOpt %>">
  <input type="hidden" id="mname" name="mname" value=" <%= movieTitle %> ">
<input type="submit" value="<%= likeText %>">
</form>
<!-- Rating List - Redirect Here -->
<br>
<form method='POST' action=<%= "/movie/" + mId %> >
<input type="hidden" id="mname" name="mname" value=" <%= movieTitle %> ">
<div> Number of People who have rated this movie: <%= rateCount %>.</div>
<div> The average rating of this movie is <%= avgRATING %>.</div>
<div <%= hiddenRating %>> You've previously rated this <%= previouslyRated %>.</div>
<label for="selfRating">Choose a Rating:</label><br>
<select id="selfRating" name="selfRating">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
  <option value="6">6</option>
  <option value="7">7</option>
  <option value="8">8</option>
  <option value="9">9</option>
  <option value="10">10</option>
</select>
<br>
<input type="submit" value="Rate">
</form>


<%- include('partials/footer') %>
